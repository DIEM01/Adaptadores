<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/teal_200">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_auto"
        android:contentDescription="@string/imagen_auto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="2dp"
        android:id="@+id/imagen"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/marca"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imagen"
        android:layout_marginTop="6dp"
        android:layout_marginStart="4dp"
        android:id="@+id/marca"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modelo"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/marca"
        app:layout_constraintLeft_toRightOf="@id/imagen"
        android:layout_marginTop="6dp"
        android:layout_marginStart="4dp"
        android:id="@+id/modelo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precio"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/imagen"
        app:layout_constraintTop_toBottomOf="@id/modelo"
        android:layout_marginTop="6dp"
        android:layout_marginStart="4dp"
        android:id="@+id/precio"
        />

</androidx.constraintlayout.widget.ConstraintLayout>